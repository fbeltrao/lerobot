    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Launch custom robot action",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/lerobot/scripts/custom_control_robot.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Launch policy server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/lerobot/scripts/policy_web_api.py",
            "args": [
                "--reload"
            ],
            "jinja": true,
            "justMyCode": false,
        },
        {
            "name": "Fine-tune [CPU] pizero-fast",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/lerobot/scripts/train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                // "--policy.path",
                // "lerobot/pi0fast_base",
                "--policy.type",
                "pi0fast",
                "--dataset.repo_id",
                "fbeltrao/so101_unplug_cable_4",
                "--policy.device",
                "cpu",
                "--steps",
                "1",
                "--output_dir",
                "outputs/train/debug",
                "--job_name",
                "debug"
            ]
        },
        {
            "name": "Fine-tune pizero-fast",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/lerobot/scripts/train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                // "--policy.path",
                // "lerobot/pi0fast_base",
                "--policy.type",
                "pi0fast",
                "--dataset.repo_id",
                "fbeltrao/so101_unplug_cable_4",
                "--log_freq",
                "1",
                "--steps",
                "2",
                "--output_dir",
                "outputs/train/debug",
                "--job_name",
                "debug"
            ],
            "env": {
                "MLFLOW_TRACKING_URI": "http://localhost:5000",
                "MLFLOW_EXPERIMENT_NAME": "lerobot",
            }
        },
        {
            "name": "AML job",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/aml/submit_job.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--policy.type",
                "pi0fast",
                "--dataset.repo_id",
                "fbeltrao/so101_unplug_cable_4",
                "--steps",
                "10",
                "--job_name",
                "aml_debug",
                "--compute_target",
                "NC24adsA100v4-singlenode-cluster",
            ]
        },
    ]
}